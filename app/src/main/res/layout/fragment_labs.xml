<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/time_arrays"
        android:prompt="@string/lab_time_prompt"
        android:textSize="30sp"/>

    <Spinner
    android:id="@+id/spinner2"
    android:layout_below="@id/spinner1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:entries="@array/software_arrays"
    android:prompt="@string/software_prompt"
    android:textSize="30sp"/>

    <Spinner
        android:id="@+id/spinner3"
        android:layout_below="@id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/specific_lab_arrays"
        android:prompt="@string/specific_lab_prompt"
        android:textSize="30sp"/>
    <!-- Need the layout below lines, otherwise it all overlaps -->
    <Button
        android:id="@+id/btnDisplay"
        android:layout_below="@id/spinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Labs"
        android:textSize="20sp"/>


</RelativeLayout>
